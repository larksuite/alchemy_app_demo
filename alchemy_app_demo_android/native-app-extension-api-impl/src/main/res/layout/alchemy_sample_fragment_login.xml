<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/alchemy_sample_login_padding_horizontal"
    android:paddingTop="@dimen/alchemy_sample_login_padding_top"
    android:paddingEnd="@dimen/alchemy_sample_login_padding_horizontal"
    tools:context="com.sample.android.alchemy.app.login.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/alchemy_sample_Lark_Demo_Welcome_Title" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alchemy_sample_login_button_height"
        android:layout_marginTop="@dimen/alchemy_sample_login_input_frame_margin_top"
        android:gravity="center_vertical"
        android:hint="@string/alchemy_sample_Lark_Demo_EnterPhoneNumber_Placeholder" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alchemy_sample_login_button_height"
        android:layout_marginTop="@dimen/alchemy_sample_login_input_margin_top"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="@string/alchemy_sample_Lark_Demo_EnterPassword_Placeholder" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alchemy_sample_login_button_height"
        android:layout_marginTop="@dimen/alchemy_sample_login_button_margin_top"
        android:gravity="center"
        android:text="@string/alchemy_sample_Lark_Demo_LogIn_Button" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp" />
</LinearLayout>